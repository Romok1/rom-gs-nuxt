<section aria-label="Methodology criteria tables" class="section-padding--bottom">
  <% (1..3).each do |n| %>
    <% table = methodology_table(n) %>
    <expandable-item>
      <template slot="header">
        <h3 class="narrow-title--large no-margin"><%= table[:title] %></h3> 
      </template>
      <template slot="content">
        <%= html_methodology_table(table).html_safe %>
      </template>
    </expandable-item>
  <% end %>
</section>
