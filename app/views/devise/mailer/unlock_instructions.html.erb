<%= render partial: 'devise/mailer/shared/header' %>

<%= render partial: 'devise/mailer/shared/body', locals: {
  subject: t('devise.mailer.unlock_instructions.subject'),
  icon: mail_image('Lock.png'),
  welcome: t(
    'devise.mailer.unlock_instructions.hello_user', 
    user: @resource.email
  ),
  paragraphs_before_link: [
    t('devise.mailer.unlock_instructions.your_account_has_been_locked_due_to_an_excessive_number_of_unsuccessful_sign_in_attempts'),
    t('devise.mailer.unlock_instructions.click_the_link_below_to_unlock_your_account')
  ],
  link: {
    text: t('devise.mailer.unlock_instructions.unlock_my_account'),
    url: unlock_url(@resource, unlock_token: @token)
  }
} %>

<%= render partial: 'devise/mailer/shared/footer' %>