<%= render partial: 'devise/mailer/shared/header' %>

<%= render partial: 'devise/mailer/shared/body', locals: {
  subject: t('devise.mailer.reset_password_instructions.change_my_password'),
  icon: mail_image('Lock.png'),
  welcome: t(
    'devise.mailer.reset_password_instructions.hello_user', 
    user: @resource.email
  ),
  paragraphs_before_link: [
    t('devise.mailer.reset_password_instructions.someone_has_requested_a_link_to_change_your_password_you_can_do_this_through_the_link_below'),
    t('devise.mailer.reset_password_instructions.if_you_didn_t_request_this_please_ignore_this_email')
  ],
  link: {
    text: t('devise.mailer.reset_password_instructions.change_my_password'),
    url: edit_password_url(@resource, reset_password_token: @token)
  },
  paragraph_after_link: t('devise.mailer.reset_password_instructions.your_password_won_t_change_until_you_access_the_link_above_and_create_a_new_one')
} %>

<%= render partial: 'devise/mailer/shared/footer' %>