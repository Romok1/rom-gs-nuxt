<div class="devise__links">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('devise.ctas.no_password'), new_password_path(resource_name), class: 'devise__text-link' %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('devise.ctas.no_confirmation'), new_confirmation_path(resource_name), class: 'devise__text-link' %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('devise.ctas.no_unlock'), new_unlock_path(resource_name), class: 'button button--grey button--small' %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to t('devise.ctas.sign_in_with', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), class: 'button button--grey button--small' %>
    <% end %>
  <% end %>
</div>